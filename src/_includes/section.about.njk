{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-800 py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-2/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-200 text-4xl mb-4 hover:text-green-600">{{ item.data.title }}</h2>
        <div class="font-light text-gray-400 text-xl">
          {{ item.templateContent | safe }}
        </div>
        <img class="w-full my-12 items-center" src="/img/lymbicmodelgraphic.svg" alt="AWE.SOME">
      </div>
      <div class="flex flex-row w-full justify-center">
        <a class="px-10 py-2 text-gray-200 bg-green-600 border-green-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:text-green-600 border" href="#features">Features</a>
      </div>
    </div>
  {% endif %}
{% endfor %}