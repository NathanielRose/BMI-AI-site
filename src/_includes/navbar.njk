<nav
  class="flex flex-col sm:flex-row w-full justify-between items-center px-4 sm:px-6 py-1 bg-white sm:bg-transparent shadow sm:shadow-none">
  <div
    class="w-full sm:w-auto self-start sm:self-center flex flex-row sm:flex-none flex-no-wrap justify-between items-center">
    <a href="/" class="no-underline"><img src="/img/lymbicai-logo.svg" alt="Lymbic AI Logo"
        class="h-12 py-1"></a>
    <button id="menuBtn" class="hamburger block sm:hidden focus:outline-none" type="button" onclick="navToggle();" aria-label="Show Menu"><span
        class="hamburger__top-bun"></span><span class="hamburger__bottom-bun"></span></button>
  </div>
  <div id="menu"
    class="w-full sm:w-auto self-end sm:self-center hidden sm:flex flex-col sm:flex-row items-center h-full py-1 pb-4 sm:py-0 sm:pb-0">
    <a class="text-gray-800 font-bold hover:text-green-600 text-lg text-center w-full no-underline sm:w-auto sm:pr-4 py-2 sm:py-1"
      href="{% if isFront %}#about{% else %}{{ site.baseURL }}/#about{% endif %}">About</a>
    <a class="text-gray-800 font-bold hover:text-green-600 text-lg text-center w-full no-underline sm:w-auto sm:px-4 py-2 sm:py-1"
      href="{% if isFront %}#features{% else %}{{ site.baseURL }}/#features{% endif %}">Features</a>
    <span id="follow"
      class="hidden sm:inline-block text-gray-800 font-bold hover:text-green-600 text-lg sm:w-auto sm:px-4 sm:py-1 cursor-pointer">Social</span>
    {% for item in site.social %}
      <a href="{{ item.url }}"
        class="text-gray-800 font-bold rounded-full hover:text-green-600 text-lg text-center w-full no-underline sm:hidden py-2"
        target="_blank" rel="noopener">{{ item.title }}</a>
    {% endfor %}
    <a class="px-6 py-1 text-gray-800 bg-green-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:text-gray-200"
      href="{% if isFront %}#register{% else %}{{ site.baseURL }}/#register{% endif %}">Learn More</a>
  </div>
</nav>